<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <!-- <div class="col-md-12 offset-md-3 col-xl-4 offset-xl-4"> -->
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title" style=" 
                    font-weight: 300;
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    text-align: center;
                    margin-right: 30px;"><strong>Raise Ticket</strong></h3>
                    <form action="/tickets/new" method="POST" class="validated-form" novalidate>

                       <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="project">Project</label>
                                <select id="project" type="text" name="project" class="form-control"
                                    placeholder="" required="required"
                                    data-error="Please choose a type">
                                    <option value="" disabled selected>Select your option</option>
                                   <% for(var i=0;i<admin.project.length;i++){%>
                                    <option value="<%=admin.project[i]%>"><%=admin.project[i]%></option>
                                    <%}%>
                                </select>
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>


                        <div class="col-md-3">
                            <label class="form-label" for="subject">Subject</label>
                            <input class="form-control" type="text" id="subject" name="subject" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label" for="message">Message</label>
                            <textarea class="form-control" id="message"  name="message" rows="3" autofocus required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <br><br>
                    <center>
                        <button style="width: min-content; margin-top: 10px;" class="btn btn-danger btn-block">Submit</button>
                    </center>
                    </div>
                    </form>
                </div>
            </div>
        <!-- </div> -->
    </div>
</div>
